# Environment Configuration for NARA Project
# Copy this file to .env.local and configure with your values

# Database Configuration
# Cloudflare D1 Database URL (for production)
# DATABASE_URL=

# Development Database (local SQLite)
# DB_PATH=./database/dev.db

# Cloudflare Configuration
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_API_TOKEN=your-api-token

# Application Configuration
APP_NAME="My NARA App"
APP_URL="http://localhost:5173"

# API Configuration  
API_BASE_URL="http://localhost:8787"

# Feature Flags (optional)
# ENABLE_ANALYTICS=false
# ENABLE_DEBUG_MODE=true

# Third-party Services (configure as needed)
# STRIPE_PUBLISHABLE_KEY=
# STRIPE_SECRET_KEY=
# RESEND_API_KEY=
# UPLOADTHING_SECRET=
# UPLOADTHING_APP_ID=